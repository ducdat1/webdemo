<div class="col-sm-8 col-sm-offset-2">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-group') do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password"  %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me, class: "form-control" %>
        <%= f.label :remember_me, class: "control-label col-sm-2" %>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
