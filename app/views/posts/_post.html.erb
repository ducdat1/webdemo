<tr>
  <td>
    <%= post.title %>
  </td>
  <td>
    <%= link_to(image_tag(post.image.url(:thumb), alt: 'Image'), post.image.url, target: '_blank') if post.image.present? %>
  </td>
  <td>
    <%= post.quantity%>
  </td>
  <td>
    <%= post.content %>
  </td>
  <td>
    <%= link_to('Show', post) %>
  </td>
  <td>
    <%= link_to('Edit', edit_post_path(post)) %>
  </td>
  <td>
    <%= link_to('Delete', post, method: :delete, remote: true, data: {confirm: 'Are you sure?'}) %>
  </td>
</tr>