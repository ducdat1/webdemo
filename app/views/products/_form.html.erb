<%= form_for [@category, @product] do |f| %>
    <% if @product.errors.any? %>
        <div class="error_explaination">
            <h2><%= pluralize(@product.errors.count, 'error') %> prohibited this product form being saved:</h2>
            <ul>
                <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :content %> <br>
        <%= f.text_area :content %>
    </p>
    <p>
        <%= f.label :quantity %> <br>
        <%= f.text_field :quantity %>
    </p>
    <%= f.submit %>
<% end %>
