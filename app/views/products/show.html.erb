<div id="product">
    <h2><%= @product.title %></h2>
    <p><%= simple_format(@product.content) %></p>
    
    <%= link_to "Edit Product", [:edit, @category, @product] %>
    <%= link_to "Delete Product", [@category, @product], method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
</div>